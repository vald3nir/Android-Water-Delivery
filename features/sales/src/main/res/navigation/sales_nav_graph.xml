<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sales_nav_graph"
    app:startDestination="@id/navigation_shopping">

    <fragment
        android:id="@+id/navigation_my_orders"
        android:name="com.vald3nir.sales.presentation.home.MyOrdersFragment"
        android:label="@string/my_orders"
        tools:layout="@layout/fragment_my_orders">

    </fragment>

    <fragment
        android:id="@+id/navigation_shopping"
        android:name="com.vald3nir.sales.presentation.create.ShoppingCartFragment"
        android:label="Shopping"
        tools:layout="@layout/fragment_shopping_cart">
        <action
            android:id="@+id/action_navigation_shopping_to_navigation_confirm_address"
            app:destination="@id/navigation_confirm_address" />
    </fragment>

    <fragment
        android:id="@+id/navigation_confirm_address"
        android:name="com.vald3nir.sales.presentation.create.ConfirmAddressFragment"
        android:label="@string/confirm_address"
        tools:layout="@layout/fragment_confirm_address">
        <action
            android:id="@+id/action_navigation_confirm_address_to_navigation_order_detail"
            app:destination="@id/navigation_order_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_order_detail"
        android:name="com.vald3nir.sales.presentation.create.OrderDetailFragment"
        android:label="@string/order_detail"
        tools:layout="@layout/fragment_order_detail">

    </fragment>

</navigation>

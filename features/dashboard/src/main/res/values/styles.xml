<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="full_screen_dialog" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen" />

    <style name="checkbox_theme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ScreenStyle" parent="">
        <item name="background">@color/black</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/base_button_layout</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ButtonRedStyle" parent="ButtonStyle">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TabTextStyle" parent="Widget.Material3.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextInputStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:ellipsize">start</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PasswordInputStyle" parent="TextInputStyle">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EmailInputStyle" parent="TextInputStyle">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="PriceInputStyle" parent="TextInputStyle">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="PasswordInputLayoutStyle" parent="TextInputLayoutStyle">
        <item name="android:hint">@string/prompt_password</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EmailInputLayoutStyle" parent="TextInputLayoutStyle">
        <item name="android:hint">@string/prompt_email</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="LabelStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TittleStyle" parent="LabelStyle">
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BigTittleStyle" parent="LabelStyle">
        <item name="android:textSize">22sp</item>
    </style>

</resources>